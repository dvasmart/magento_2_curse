<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/test/cars/service" method="GET">
        <service class="Vitalii\Test\Api\CarsServiceInterface" method="getCarsList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/test/cars/service/:userId" method="GET">
        <service class="Vitalii\Test\Api\CarsServiceInterface" method="getCarsListByUserId"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/test/cars/save" method="POST">
        <service class="Vitalii\Test\Api\CarsServiceInterface" method="save"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/test/cars/save/:carId" method="DELETE">
        <service class="Vitalii\Test\Api\CarsServiceInterface" method="delete"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
