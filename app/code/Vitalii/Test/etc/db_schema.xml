<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="vitalii_customers" resource="default" engine="innodb" comment="My Custom Old Table! Declarative">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Old Entity ID"/>
        <column xsi:type="varchar" name="email" nullable="false" length="64" comment="Old Email"/>
        <column xsi:type="int" name="some_id" padding="11" nullable="false" default="0" comment="Old Some ID"/>
        <column xsi:type="text" name="name" nullable="true" comment="Old Name"/>
        <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Car entity created at"/>
        <column xsi:type="decimal" name="price" default="00.0000" scale="4" precision="20" unsigned="false" nullable="true" comment="Base Car Price"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="VITALII_CUSTOMERS_EMAIL">
            <column name="email"/>
        </constraint>
    </table>
    <table name="vitalii_cars" resource="default" engine="innodb" comment="My New Declarative Table">
        <column xsi:type="int" name="entity_id" padding="9" unsigned="false" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="smallint" name="user_id" padding="6" unsigned="false" nullable="false" identity="false" comment="User ID"/>
        <column xsi:type="int" name="car_id" padding="9" unsigned="true" nullable="false" identity="false" default="0" comment="Car ID"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Car entity created at"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="VITALII_CARS_USER_ID" table="vitalii_cars" column="user_id" referenceTable="vitalii_customers" referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="VITALII_CARS_USER_ID_CAR_ID">
            <column name="car_id"/>
        </constraint>
    </table>
</schema>
